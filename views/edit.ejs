<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" value="<%=blog.title%>"%>name="blog[title]" placeholder="Title">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" value="<%=blog.image%>" name="blog[image]" placeholder="Image">
		</div>
		<div class="field">
			<label>Content</label>
			<textarea name="blog[body]"><%=blog.body%></textarea>
		</div>
		<input class="ui big grey basic button" type="submit">
	</form>
	</div>

	<% include partials/footer %>